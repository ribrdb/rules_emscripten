    host_system_name: "i686-unknown-linux-gnu"
    target_system_name: "emscripten-unknown-emscripten"
    target_cpu: "emscripten"
    target_libc: "unknown"
    compiler: "emscripten"
    abi_version: "unknown"
    abi_libc_version: "unknown"
    tool_path {
      name: "gcc"
      path: "emcc.sh"
    }
    tool_path {
        name: "ld"
        path: "emcc.sh"
    }
    tool_path {
        name: "ar"
        path: "/bin/false"
    }
    tool_path {
        name: "cpp"
        path: "/bin/false"
